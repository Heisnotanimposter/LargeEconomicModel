# Economic Data API - Environment Configuration
# Copy this file to .env and fill in your values

# ===== API Configuration =====
API_V1_STR=/api/v1
PROJECT_NAME=Economic Data API
VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# ===== Database Configuration =====
# SQLite (default)
DATABASE_URL=sqlite:///./economic_data.db

# ===== Redis Configuration (Optional - for caching) =====
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ===== Authentication & Security =====
ENABLE_AUTH=false
API_KEY_NAME=X-API-Key
SECRET_KEY=your-secret-key-change-this-in-production

# ===== Rate Limiting =====
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===== External API Keys =====
# FRED API Key (get from https://fred.stlouisfed.org/docs/api/api_key.html)
# FRED_API_KEY=your_fred_api_key_here

# ===== Data Provider Settings =====
ENABLE_FRED=true
ENABLE_WORLD_BANK=true
ENABLE_OECD=true
ENABLE_IMF=true
ENABLE_TRADING_ECONOMICS=false

# ===== Request Settings =====
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# ===== Logging =====
LOG_LEVEL=INFO
